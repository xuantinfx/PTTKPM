<div class="container">
    <div class="row">
        <h1>Đơn hàng nhập</h1>
    </div>
    <div class="row">
        <button class="btn btn-success col-2 ml-3 mb-3">Thêm</button>
    </div>
    <!--Mỗi đơn hàng là 1 card-->
    {{#each dsDonNhap}}
    <div class="card row" style="margin-bottom: 20px;">
        <h4 class="card-header">
            #{{this.maDonHang}}
        </h4>
        <div class="card-body">
            <span>Ngày lập: </span>
            <span>{{this.ngayLapDon}} </span>
            <br>
            <span>Người lập: </span>
            <span>{{this.nguoiLap}}</span>
            <br>
            <span>Trạng thái: </span>
            <span class="badge badge-success">{{this.dsHangHoa.0.trangThai}}</span>
            <!--Bảng chi tiết đơn hàng-->
            <table class="table" style="margin: 20px 0px 20px;">
                <tr>
                    <th>STT</th>
                    <th>Hàng hóa</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
                {{#each this.dsHangHoa}}
                <tr>
                    <td>{{@index}}</td>
                    <td>{{this.tenHangHoa}}</td>
                    <td>{{this.soLuong}} {{this.donVi}}</td>
                    <td>{{this.donGia}}</td>
                    <td>{{this.thanhTien}}</td>
                </tr>
                {{/each}}
                <tr>
                    <td colspan="4">Tổng:</td>
                    <td>{{this.tongTien}}</td>
                </tr>
            </table>
            <!--Ngày nhập/xuất khác với ngày tạo đơn-->
            <span>Ngày nhập:</span>
            <span>{{this.ngayNhap}}{{#unless this.ngayNhap}}Trống{{/unless}}</span>

            <!--Nút chức năng-->
            <div class="row ml-3 mt-3">
                <button class="btn btn-warning col-2 mr-3">Sửa</button>
                <button class="btn btn-danger col-2">Xóa</button>
            </div>

        </div>
    </div>
    {{/each}}
</div>